{
	"name": "melbahja/environ",
	"type": "library",
	"description": "Load environment variables from .env file ONLY on $_ENV and runtime.",
	"keywords": [".env", "env variables", "php7", "env loader", "environment", "ini"],
	"license": "MIT",
	"authors": [
		{
			"name": "Mohamed ELbahja",
			"email": "mohamed@elbahja.me",
			"homepage": "https://elbahja.me",
			"role": "Developer"
		}
	],

	"require": {
		"php": ">=7.1"
	},

	"autoload":{
		"psr-4": {
			"Melbahja\\Environ\\": "src/"
		}
	},

	"autoload-dev": {
		"psr-4": {
			"Melbahja\\Environ\\Tests\\": "tests/"
		}
	},

	"require-dev": {
		"phpunit/phpunit": "^8.0 || ^7.0"
	},

	"minimum-stability":"dev"
}